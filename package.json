{
  "name": "claude-skills-creator",
  "version": "1.0.0",
  "description": "Advanced Claude Code Skills Creator - An intelligent tool for creating, managing, and sharing Claude Code skills",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "skill": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "skills",
    "ai",
    "automation",
    "cli",
    "generator"
  ],
  "author": "Alexxiang2008",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "boxen": "^7.1.0",
    "mustache": "^4.2.0",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/inquirer": "^9.0.0",
    "@types/mustache": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
